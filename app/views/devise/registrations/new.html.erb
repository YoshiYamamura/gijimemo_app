<div class='registration-wrapper'>
  <div class='registration-title'>
    ユーザー新規登録
  </div>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class='registration-form-group'>
      <div>
        <label class='registration-form-text'>ニックネーム</label>
      </div>
      <%= f.text_field :nickname, class: 'registration-input-form', maxlength: '40', autofocus: true %>
    </div>

    <div class='registration-form-group'>
      <div>
        <label class='registration-form-text'>メールアドレス</label>
      </div>
      <%= f.email_field :email, class: 'registration-input-form', autocomplete: 'email' %>
    </div>

    <div class='registration-form-group'>
      <div>
        <label class='registration-form-text'>パスワード</label>
      </div>
      <%= f.password_field :password, class: 'registration-input-form', autocomplete: 'new-password', placeholder: "8文字以上の半角英数字" %>
    </div>

    <div class='registration-form-group'>
      <div>
        <label class='registration-form-text'>パスワード(確認)</label>
      </div>
      <%= f.password_field :password_confirmation, class: 'registration-input-form', autocomplete: 'new-password', placeholder: "同じパスワードを入力" %>
    </div>

    <div class='registration-actions'>
      <%= f.submit "新規登録する" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
